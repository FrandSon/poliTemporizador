{
  "name": "politemporizador",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,html,css,json,md}\"",
    "docker:build": "docker build -t frands0n/politemporizador .",
    "docker:run": "docker run -p 3000:80 frands0n/politemporizador"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
